<!DOCTYPE html>
<html>
  <head>
    <%= render :partial => 'layouts/head' %>
    <%= yield :head %>
  </head>

  <body  id="secPage" class="twoColumn">

    <%= render :partial => 'layouts/header' %>
    <%= render :partial => 'layouts/nav_menu' %>

    <% if flash[:notice] %> <div id="notice"><%= flash[:notice] %></div> <% end %>
    <% if flash[:alert] %> <div id="alert"><%= flash[:alert] %></div><% end %>

  <section id="content" class="clearfix">
    <div id="wrapper">
      <section id="mainColumn" class="clearfix contents">
        <div id="top"></div>
        <%= render :partial => 'layouts/breadcrumb' %>

        <!-- Element -->
        <article class="text">
          <%= yield %>
        </article>
        <!-- /Element -->

      </section>
      <section id="subColumn" class="clearfix contents">
        <div id="top"></div>
        <!-- Element -->
        <article class="text">
          <%= render :partial => 'layouts/admin' %>
        </article>
        <!-- /Element -->
      </section>
    </div>
  </section>

  <%= render :partial => 'layouts/footer' %>
</body>
</html>
