<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <% if devise_mapping.rememberable? -%>
    <p>
      <%= f.label :remember_me %>
      <%= f.check_box :remember_me %>
    </p>
  <% end -%>

  <p>
    <%= f.submit "Sign in" %>
    <%= render :partial => "devise/shared/links" %>
  </p>
<% end %>
