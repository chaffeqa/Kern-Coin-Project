
  <!-- Element -->
  <article class="blogList">
    
    <h1 class="title">News</h1>
    <a class="rss" href="/feed">Subscribe</a>
    <% if @recent_news and @recent_news.count > 0 %>
      <ul>
        <% @recent_news.each do |article| %>
          <li>
            <h2 class="postTitle"><%= link_to article.title, news_article_path(article) %></h2>
            <div class="postInfo"><span class="postDate"><%= article.updated_at.strftime("%I %p - %b %d, %Y") %> (August 11, 2010) </span></div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>There is no recent news at this time.</p>
    <% end %>
  </article>
  <!-- /Element -->

  <!-- Element -->
  <article class="text">
    <a href="/archives"><img style="float: right; margin-top: 19px;" src="images/view-archive.png" alt="View News Archive" /></a>
  </article>
  <!-- /Element -->


