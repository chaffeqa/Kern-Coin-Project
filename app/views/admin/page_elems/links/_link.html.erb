<% admin_area do %>
  | <%= link_to 'Edit', edit_admin_link_list_elem_link_path( link.link_list_elem, link ) %> | &nbsp;
<% end %>

<% if link.link_type == "Url" %>
  <%= link_to link.link_name, link.link_url, :target => link.target %>
<% end %>
<% if link.link_type == "Page" %>
  <%= link_to link.link_name, shortcut_path(link.node.shortcut), :target => link.target %>
<% end %>
<% if link.link_type == "File" %>
  <%= link_to link.link_name, file_admin_link_list_elem_link_path(link.link_list_elem, link), :target => link.target %>
<% end %>