<%= form_for([:admin,@calendar, @event]) do |tf| %>
  <% if @event.errors.any?   %>
    <div id="error_explanation">
      <h2><%= pluralize((@event.errors.count), "error") %> prohibited this Event from being saved:</h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= tf.fields_for :node do |f| %>
    <%= render :partial => 'admin/default_node_form', :locals => {:f => f} %>
  <% end %>

  <div class="field">
    <%= tf.label :name %><br />
    <%= tf.text_field :name %>
  </div>

  <div class="field">
    <%= tf.label :description, "Event Description" %><br />
    <%= tf.cktext_area :description %>
  </div>

  <div class="field">
    <%= tf.check_box :all_day %> &nbsp;
    <%= tf.label :all_day, 'All Day Event?' %>
  </div>

  <div class="field">
    <%= tf.label :start_at %><br />
    <%= tf.date_select :start_at %>
  </div>

  <div class="field">
    <%= tf.label :end_at %><br />
    <%= tf.date_select :end_at %>
  </div>

<%= tf.hidden_field :color, :value => @calendar.event_color  %>


  <div class="actions">
    <%= tf.submit %>
  </div>
<% end %>
