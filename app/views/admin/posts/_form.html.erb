<%= form_for([:admin, @blog, @post]) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize((@post.errors.count), "error") %> prohibited this Post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<fieldset>
  <%= f.fields_for :node do |node_f| %>
    <div class="field">
      <%= node_f.label :parent_id, 'Blog' %>
      <%= node_f.select :parent_id, options_from_collection_for_select(Node.where(:page_type => 'Blog'), :id, :title, @blog.node.id) %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Post Title", :class => "req" %>
    <%= f.text_field :title %>
  </div>
  <hr />

  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.cktext_area :body %>
  </div>

  <%= render :partial => 'admin/submit', :locals => {:f => f, :type => 'Post'} %>
</fieldset>
<% end %>
