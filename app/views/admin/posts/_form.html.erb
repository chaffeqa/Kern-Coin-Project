<%= form_for([:admin,@blog, @post]) do |tf| %>
  <% if @post.errors.any?   %>
    <div id="error_explanation">
      <h2><%= pluralize((@post.errors.count), "error") %> prohibited this Post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= tf.fields_for :node do |f| %>
    <%= render :partial => 'admin/default_node_form', :locals => {:f => f} %>
  <% end %>


  <div class="field">
    <%= tf.label :title %><br />
    <%= tf.text_field :title %>
  </div>
  <div class="field">
    <%= tf.label :body, "Body" %><br />
    <%= tf.cktext_area :body %>
  </div>


  <div class="actions">
    <%= tf.submit %>
  </div>
<% end %>
