<li title="<%= category.description || 'No Description' %>">
  <%= link_to category.title, category.node.url %> &nbsp;
  <%= link_to 'Edit', edit_admin_category_path(category), :class => "btn small" %>
  <%= link_to 'Delete', admin_category_path(category), :confirm => 'Are you sure?', :method => :delete, :class => "btn small" %>
</li>

<% unless category.children.empty? %>
  <ul>
    <% category.children.each do |category| %>
      <%= render :partial => 'category', :locals => {:category => category} %>
    <% end %>
  </ul>
<% end %>