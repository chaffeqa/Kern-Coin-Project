<h1>Listing questions</h1>

<table>
  <tr>
    <th><%= link_to 'Date', admin_questions_path( :order_by => 'created_at') %></th>
    <th><%= link_to 'From', admin_questions_path( :order_by => 'last_name') %></th>
    <th><%= link_to 'Subject', admin_questions_path( :order_by => 'subject') %></th>
  </tr>

  <% @questions.each do |question| %>
    <tr>
      <td><%= question.created_at %></td>
      <td><%= question.last_name %>, <%= question.first_name %></td>
      <td><%= question.subject %></td>
      <td><%= link_to 'Show', admin_question_path(question) %></td>
      <td><%= link_to 'Destroy', admin_question_path(question), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<div class="pagination"><%= will_paginate @questions %></div>