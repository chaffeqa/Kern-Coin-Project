<h1>Listing Calendars</h1>

<p><%= link_to 'New Calendar', new_admin_calendar_path, :class => 'btn large' %></p>

<table>
  <tr>
    <th><%= sortable "title", "Title" %></th>
    <th>Shortcut</th>
    <th><%= sortable "event_color", "Event Color" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @calendars.each do |calendar| %>
    <tr>
      <td><%= calendar.title %></td>
      <td><em><%= calendar.node ? calendar.node.shortcut : 'No Shortcut' %></em></td>
      <td><%= calendar.event_color %></td>
      <td><%= link_to 'Show Calendar', shortcut_path(calendar.node.shortcut), :class => 'btn small' %></td>
      <td><%= link_to 'Settings', edit_admin_calendar_path(calendar), :class => 'btn small' %></td>
      <td><%= link_to 'Delete', admin_calendar_path(calendar), :confirm => 'Are you sure?', :method => :delete, :class => 'btn small' %></td>
    </tr>
  <% end %>
</table>
<div class="pagination"><%= will_paginate @calendars %></div>