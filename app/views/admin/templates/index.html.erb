<h1>Listing Pages</h1>

<table>
  <tr>
    <th>Template Type</th>
    <th>Title</th>
    <th>Menu name</th>
    <th>Shortcut</th>
    <th>Displayed</th>
  </tr>

  <% @templts.each do |templt| %>
    <tr>
      <td><%= templt.template_name %></td>
      <td><%= templt.node.title %></td>
      <td><%= templt.node.menu_name %></td>
      <td><%= templt.node.shortcut %></td>
      <td><%= templt.node.displayed %></td>
      <td><%= link_to 'Show', shortcut_path(templt.node.shortcut) %></td>
      <td><%= link_to 'Edit', edit_admin_template_path(templt) %></td>
      <td><%= link_to 'Destroy', admin_template_path(templt), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

