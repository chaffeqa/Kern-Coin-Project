<% @dynamic_page = @dynamic_page || @node.page %>
<% @elements = @elements || @dynamic_page.elements %>
<%= render :partial => "dynamic_pages/#{@node.page.underscore_template_name}" %>

<% content_for :page_admin_bar do %>
  <%= link_to('Preview Page',  '#', :class => 'btn yellow large', :id => 'preview') %>
  <%= link_to('Page Settings',  edit_admin_dynamic_page_path(@dynamic_page), :class => 'btn large') %>
<% end %>

<% content_for :page_title do %>
  <%= @node.title %>
<% end %>

