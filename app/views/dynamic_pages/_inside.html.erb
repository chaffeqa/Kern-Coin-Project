<!-- All dynamic_pages with the template_type = 'Inside' -->

<%= content_for :body_id do %>secPage<% end %>
<%= content_for :body_class do %>twoColumn<% end %>

<section id="content" class="clearfix">
  <div id="wrapper">
    <section id="mainColumn" class="clearfix contents">
      <div id="top"></div>
      <div id="inner">
        <%= render :partial => 'layouts/site_partials/breadcrumb' %>
        <%= render :partial => 'elements/page_area_elements', :locals => {:page_area => 1} %>
      </div>
    </section>

    <section id="subColumn" class="clearfix contents">
      <div id="top"></div>
      <div id="inner">
	<h3><%=  @node.title %></h3>
	<div id="categoryList">
	  <%= render_navigation(:level => 2..7) %>
	</div>
        <%= render :partial => 'elements/page_area_elements', :locals => {:page_area => 2} %>
      </div>
    </section>
  </div>
</section>
