<ul>
  <% posts.each do |post| %>
    <li>
      <h2 class="postTitle"><% if admin? %><%= link_to "Edit", edit_admin_blog_post_path(blog, post) %><% end %> <%= link_to post.title, shortcut_path(post.node.shortcut) %></h2>
      <div class="postInfo"><span class="postDate"><%= post.created_at.strftime("%I %p - %b %d, %Y") %> </span></div>
      <div class="postBody"><%=raw post.body %></div>
    </li>
  <% end %>
</ul>