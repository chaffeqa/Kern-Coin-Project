<ul class="calendarList">
  <% events.each do |event| %>
    <li>
      <h2 class="eventTitle">
	<% if admin? %><%= link_to "Edit", edit_admin_calendar_event_path(event.calendar, event) %><% end %>
	<%= link_to event.name, shortcut_path(event.node.shortcut) %>
      </h2>
      <p class="postInfo">
	<span class="postDate">
	  <%= event.start_at.strftime("%b %d") %>, 
	  <%= event.all_day ? 'All Day' : ("#{event.start_at.strftime("%I:%M %p")} - #{event.end_at.strftime("%I:%M %p")}") %>
        </span>
      </p>
    </li>
  <% end %>
</ul>
