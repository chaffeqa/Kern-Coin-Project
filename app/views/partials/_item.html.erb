<% item = defined?(locals[:item]) ? locals[:item] : @item %>

<h3><%= item.name %></h3>

<div class="image"><%= image_tag item.product_images.first.url(:display) %></div>

<p>
  <strong>Item ID: </strong>
  <%= item.item_id %>
</p>

<p>
  <strong>Details: </strong>
  <%=raw item.details %>
</p>

<p>
  <strong>Category: </strong>
  <%= item.category.title %>
</p>

<p>
  <strong>Cost: </strong>
  <%= number_to_currency(item.cost) %>
</p>

<p>
  <strong>For Sale: </strong>
  <%= item.for_sale %>
</p>

<p>
  <strong>On Display: </strong>
  <%= item.display %>
</p>
